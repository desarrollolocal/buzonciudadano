
<%= form_tag('/issue/create') do -%>

  <ul class="breadcrumb">
  <li>Resumen <span class="divider"> &gt; </span></li>
  <li class="active"> Descripción <span class="divider"> &gt; </span></li>
  <li>Final</li>
  </ul>

  <input type="hidden" name="fullname" value="<%= @fullname %>">
  <input type="hidden" name="email" value="<%= @email %>">
  <input type="hidden" name="dni" value="<%= @dni %>">
  <input type="hidden" name="summary" value="<%= @summary %>">

  <div class="row-fluid">

    <div class="well well-small">
      <p class="lead"><%= @summary %> </p>
    </div>

  <div class="row-fluid">
    <fieldset class="form-inline">
      <legend> Dirección </legend>
      <span class="help-block"> Por favor se específico para que atraiga más atención</span>
      <input id="address" name="address" type="text" class="input-xxlarge"
        placeholder="dirección de la incidencia" required>
    </fieldset>
  </div>

  <br/>

  <div class="row-fluid">
    <div class="offset1">
      <div id="map" class="map"></div>
    </div>
  </div>


  <div class="row-fluid">

    <fieldset class="form-inline">
      <div id="uploader"></div>
      <div id="preview"></div>
      <div id="images"></div>
    </fieldset>

  </div>

  <div class="row-fluid">
    <legend> Descripción </legend>
    <textarea name="text" class="text" placeholder="describe detalladamente tu sugerencia" required>
    </textarea>

  </div>


  <div class="row-fluid">
    <div class="offset5">
      <%= submit_tag 'Terminar', :class => "btn btn-large btn-warning" %>
    </div>
  </div>
<% end -%>


