<div class="row">
  <form method="post" action="#">
    <div class="span8">
      <div class="form-inline">
        <label for="summary">Resumen:</label>
        <input id="summary" name="summary" type="text" class="input-xxlarge"
          placeholder="¿cuál es tu sugerencia? se específico" required>
      </div>

      <div class="form-inline">
        <label for="address">Dirección:</label>
        <div class="input-append">
          <input id="address" name="address" type="text" class="input-xxlarge"
            placeholder="dirección de la incidencia" required>
        </div>
      </div>

      <div id="map" class="map"></div>

      <textarea name="text" class="text" placeholder="describe detalladamente tu sugerencia" required></textarea>
    </div>
  </form>
</div>

<script src="http://maps.googleapis.com/maps/api/js?libraries=places&sensor=false"></script>
<script>
  function loadAutocomplete() {
    var cityBounds = new google.maps.LatLngBounds(
      new google.maps.LatLng(39.502617, 151.1759),
      new google.maps.LatLng(39.497881, -0.359974)
    );

    var input = document.getElementById('address'),
        options = {
          bounds: cityBounds,
          componentRestrictions: {country: 'es'}
        };

    new google.maps.places.Autocomplete(input, options);
  }

  function updateMap() {
    var address = $('#address').val(),
        img = document.createElement('img');

    img.src = "http://maps.google.com/maps/api/staticmap?center=" + address +
      "&zoom=16&size=609x250&maptype=roadmap&sensor=false&markers=color:blue|" + address;

    $('#map').empty();
    $('#map').append(img);
    $('#map').show();
  }

  loadAutocomplete();

  $('#address').blur(function(event) {
    var value = event.target.value;

    if(value.length > 5)
      updateMap();
  });
</script>